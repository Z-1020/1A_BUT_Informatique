<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="664.0" prefWidth="300.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.DroiteController">
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
         <children>
            <HBox prefHeight="2.0" prefWidth="250.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="100.0" text="Id :" />
                  <TextField fx:id="textFieldId" alignment="CENTER_RIGHT" disable="true" prefHeight="26.0" prefWidth="162.0" />
               </children>
            </HBox>
            <HBox prefHeight="2.0" prefWidth="250.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="100.0" text="Nom du lieu :" />
                  <TextField fx:id="textFieldNomLieu" alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="162.0" />
               </children>
            </HBox>
            <Label text="Description du lieu :">
               <VBox.margin>
                  <Insets bottom="3.0" top="3.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="textAreaDescription" prefHeight="200.0" prefWidth="200.0" />
            <ButtonBar prefHeight="3.0" prefWidth="1200.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <buttons>
                  <ToggleButton fx:id="toggleButtonDebut" mnemonicParsing="false" text="Début" />
                  <ToggleButton fx:id="toggleButtonFin" mnemonicParsing="false" text="Fin" />
                  <ToggleButton fx:id="toggleButtonDefaite" mnemonicParsing="false" text="Défaite" />
               </buttons>
            </ButtonBar>
            <HBox prefHeight="14.0" prefWidth="262.0">
               <children>
                  <CheckBox fx:id="checkBoxMonstre" mnemonicParsing="false" prefHeight="18.0" prefWidth="259.0" text="Ce lieu possède un monstre" />
               </children>
            </HBox>
            <VBox fx:id="vBoxMonstre" prefHeight="381.0" prefWidth="305.0">
               <children>
                  <HBox prefHeight="2.0" prefWidth="250.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="100.0" text="Nom :" />
                        <TextField fx:id="textFieldNomMonstre" alignment="CENTER_RIGHT" disable="true" prefHeight="26.0" prefWidth="162.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="2.0" prefWidth="250.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="100.0" text="HP :" />
                        <TextField fx:id="textFieldHP" alignment="CENTER_RIGHT" disable="true" prefHeight="26.0" prefWidth="162.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="2.0" prefWidth="250.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="100.0" text="Armure :" />
                        <TextField fx:id="textFieldArmure" alignment="CENTER_RIGHT" disable="true" prefHeight="26.0" prefWidth="162.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="2.0" prefWidth="250.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="100.0" text="Attaque :" />
                        <TextField fx:id="textFieldAttaque" alignment="CENTER_RIGHT" disable="true" prefHeight="26.0" prefWidth="162.0" />
                     </children>
                  </HBox>
                  <Button fx:id="buttonDijkstra" mnemonicParsing="false" text="Launch Dijkstra">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <HBox prefHeight="27.0" prefWidth="305.0">
                     <children>
                        <Button fx:id="button0" mnemonicParsing="false" text="0" />
                        <Button fx:id="button1" mnemonicParsing="false" text="1">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="button2" mnemonicParsing="false" text="2" />
                        <Button fx:id="button3" mnemonicParsing="false" text="3" />
                        <Button fx:id="button4" mnemonicParsing="false" text="4" />
                     </children>
                     <VBox.margin>
                        <Insets top="3.0" />
                     </VBox.margin>
                  </HBox>
                  <TextArea fx:id="textArea" prefHeight="186.0" prefWidth="305.0" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
